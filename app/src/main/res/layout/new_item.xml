<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_100_dip"
    android:padding="@dimen/dimen_20_dip"
    android:orientation="horizontal"
    android:background="@color/white">

    <ImageView
        android:id="@+id/new_img"
        android:layout_width="@dimen/dimen_65_dip"
        android:layout_height="@dimen/dimen_65_dip"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/new_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_23_dip"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_23_dip"
        android:text="@string/app_name"/>

</LinearLayout>