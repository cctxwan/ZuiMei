<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BannerDetailActivity">

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loading_frag_tj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicator="BallClipRotateMultiple"
        app:indicator_color="@color/red" />

    <ImageView
        android:id="@+id/img_banner_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20_dip"
        android:layout_marginRight="@dimen/dimen_20_dip"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

</RelativeLayout>