<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影图片，android:left表示阴影图片左边到背景图片左边的距离
    android:top表示阴影图片上边到背景图片上边的距离-->
    <item
        android:left="@dimen/dimen_0.5_dip"
        android:top="@dimen/dimen_0.5_dip"
        android:bottom="@dimen/dimen_0.5_dip"
        android:right="@dimen/dimen_0.5_dip">
        <shape>
            <corners android:radius="@dimen/dimen_13_dip" />
            <solid android:color="@color/lightgrey" />
        </shape>
    </item>
    <!-- 背景图片，android:right表示阴影图片右边到背景图片右边的距离
    android:bottom表示阴影图片下边到背景图片下边的距离-->
    <item
        android:bottom="@dimen/dimen_1_dip"
        android:right="@dimen/dimen_1_dip"
        android:left="@dimen/dimen_1_dip"
        android:top="@dimen/dimen_1_dip">
        <shape>
            <corners android:radius="@dimen/dimen_13_dip" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>
